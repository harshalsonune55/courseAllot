<div class="min-h-screen bg-gray-100 px-10 py-8">

    <!-- SEARCH -->
    <div class="mb-8">
      <input 
        type="text" 
        placeholder="Search courses, faculty, allocations..."
        class="w-full px-5 py-4 rounded-xl border-2 border-gray-300 focus:outline-none"
      />
    </div>
  
    <!-- TITLE -->
    <h2 class="text-2xl font-bold text-gray-800 mb-6">
      AI Dashboard ✨
    </h2>
  
    <!-- STATS -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
  
      <div class="bg-green-700 text-white rounded-2xl p-6">
        <h3>Courses</h3>
        <p class="text-3xl font-bold mt-2"><%= data.stats.courses %></p>
      </div>
  
      <div class="bg-green-700 text-white rounded-2xl p-6">
        <h3>Faculty</h3>
        <p class="text-3xl font-bold mt-2"><%= data.stats.faculty %></p>
      </div>
  
      <div class="bg-green-700 text-white rounded-2xl p-6">
        <h3>AI Matches</h3>
        <p class="text-3xl font-bold mt-2"><%= data.stats.matches %></p>
      </div>
  
      <div class="bg-green-700 text-white rounded-2xl p-6">
        <h3>Pending</h3>
        <p class="text-3xl font-bold mt-2"><%= data.stats.pending %></p>
      </div>
  
    </div>
  
    <!-- AI RECOMMENDATIONS -->
    <div class="bg-white rounded-2xl shadow-md p-6 border">
  
      <h3 class="text-xl font-semibold mb-6">
        AI Recommendations ✨
      </h3>
  
      <% data.recommendations.forEach(function(rec) { %>
  
        <div class="flex justify-between items-center bg-gray-50 p-4 rounded-xl mb-4">
  
          <div>
            <p class="font-medium">
              <%= rec.faculty %> → <%= rec.course %>
            </p>
            <p class="text-green-600 text-sm font-semibold">
              AI: <%= rec.score %>%
            </p>
          </div>
  
          <% if(rec.status === "APPROVED") { %>
            <span class="px-4 py-1 rounded-full bg-green-700 text-white text-sm">
              APPROVED
            </span>
          <% } else { %>
            <span class="px-4 py-1 rounded-full bg-gray-800 text-white text-sm">
              PENDING
            </span>
          <% } %>
  
        </div>
  
      <% }) %>
  
    </div>
  
  </div>
  