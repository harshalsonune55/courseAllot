

<div class="px-16 py-10">

  <!-- SEARCH -->
  <div class="mb-8">
    <input 
      type="text"
      placeholder="Search courses, faculty, allocations..."
      class="w-full border border-gray-300 rounded-xl px-6 py-4 focus:ring-2 focus:ring-blue-600 focus:outline-none"
    />
  </div>

  <!-- AI Dashboard -->
  <h2 class="text-2xl font-bold text-gray-800 mb-6">AI Dashboard ✨</h2>

  <div class="grid grid-cols-2 gap-6 mb-10">

    <% Object.keys(data.stats).forEach(key => { %>
      <div class="bg-green-800 text-white p-6 rounded-2xl shadow-md">
        <p class="capitalize"><%= key %></p>
        <h3 class="text-3xl font-bold mt-2"><%= data.stats[key] %></h3>
      </div>
    <% }) %>

  </div>

  <!-- Recommendations -->
  <div class="bg-white rounded-2xl p-8 shadow border border-gray-200">

    <h3 class="text-xl font-semibold mb-6 text-gray-800">AI Recommendations ✨</h3>

    <% data.recommendations.forEach(item => { %>

      <div class="bg-gray-50 p-6 rounded-xl flex justify-between items-center mb-4 border">

        <div>
          <p class="font-medium text-gray-800">
            <%= item.faculty %> → <%= item.course %>
          </p>
          <p class="text-green-700 text-sm mt-1">
            AI: <%= item.score %>%
          </p>
        </div>

        <% if(item.status === "APPROVED"){ %>
          <span class="bg-green-700 text-white px-4 py-2 rounded-full text-sm">
            APPROVED
          </span>
        <% } else { %>
          <span class="bg-gray-900 text-white px-4 py-2 rounded-full text-sm">
            PENDING
          </span>
        <% } %>

      </div>

    <% }) %>

  </div>

</div>
