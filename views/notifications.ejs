<div class="px-16 py-10 bg-gray-100 min-h-screen">


  <div class="mb-10">
    <input 
      type="text"
      placeholder="Search courses, faculty, allocations..."
      class="w-full border-2 border-gray-300 rounded-xl px-6 py-4 focus:ring-2 focus:ring-blue-600 focus:outline-none"
    />
  </div>


  <h2 class="text-2xl font-semibold text-gray-800 mb-8">
    Notifications
  </h2>


  <div class="space-y-8">

    <% if (!data.requests || data.requests.length === 0) { %>

      <div class="bg-white border-2 border-gray-300 rounded-2xl p-8 text-gray-600">
        No notifications yet.
      </div>

    <% } else { %>

      <% data.requests.forEach(req => { %>

        <div class="bg-white border-2 border-gray-300 rounded-2xl p-8 flex items-start gap-4 shadow-sm">

     
          <% if (req.status === "APPROVED") { %>
            <div class="w-3 h-3 bg-green-600 rounded-full mt-2"></div>
          <% } else if (req.status === "REJECTED") { %>
            <div class="w-3 h-3 bg-red-600 rounded-full mt-2"></div>
          <% } else { %>
            <div class="w-3 h-3 bg-gray-400 rounded-full mt-2"></div>
          <% } %>

          <div class="flex-1">

        
            <% if (req.status === "APPROVED") { %>
              <p class="text-lg text-gray-800">
                Course allocation approved for 
                <strong><%= req.courseName %></strong>
              </p>
            <% } else if (req.status === "REJECTED") { %>
              <p class="text-lg text-gray-800">
                Course allocation rejected for 
                <strong><%= req.courseName %></strong>
              </p>
            <% } else { %>
              <p class="text-lg text-gray-800">
                Allocation request submitted for 
                <strong><%= req.courseName %></strong>
              </p>
            <% } %>
            <% if(req.hodReply){ %>
              <p class="text-red-700 mt-2">
                <strong>HOD Reply:</strong>
                <%= req.hodReply %>
              </p>
            <% } %>
            

      
            <p class="text-gray-400 mt-1 text-sm">
              <%= req.requestedAt 
                    ? new Date(req.requestedAt).toISOString().split('T')[0] 
                    : '' %>
            </p>

          </div>

        </div>

      <% }) %>

    <% } %>

  </div>

</div>
