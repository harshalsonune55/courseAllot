<!DOCTYPE html>
<html>
<head>
  <title>HOD Signup</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="relative flex items-center justify-center min-h-screen bg-cover bg-center"
      style="background-image: url('/images/course_back.jpg');">
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>

      <div class="relative bg-white/90 backdrop-blur-md w-[380px] rounded-2xl shadow-2xl p-8">


    <!-- Logo -->
    <div class="flex justify-center mb-6">
        <div class="bg-green-800 w-20 h-20 rounded-2xl flex items-center justify-center text-white text-2xl">
        üè¢
      </div>
    </div>

    <!-- Title -->
    <h1 class="text-2xl font-bold text-center mb-1">CAS</h1>
    <p class="text-center text-gray-500 mb-6 text-sm">
      Register as Head of Department
    </p>

    <% if (error) { %>
      <div class="bg-red-100 text-red-700 p-3 rounded-lg mb-6 text-sm text-center">
        <%= error %>
      </div>
    <% } %>

    <form action="/hod-signup" method="POST">

      <!-- Full Name -->
      <div class="mb-4">
        <label class="block text-sm font-semibold mb-2">Full Name</label>
        <input type="text" name="fullName" required
          class="w-full border-2 border-gray-800 rounded-2xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-900">
      </div>

      <!-- Email -->
      <div class="mb-4">
        <label class="block text-sm font-semibold mb-2">Email</label>
        <input type="email" name="email" required
          class="w-full border-2 border-gray-800 rounded-2xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-900">
      </div>

      <!-- Username -->
      <div class="mb-4">
        <label class="block text-sm font-semibold mb-2">Username</label>
        <input type="text" name="username" required
          class="w-full border-2 border-gray-800 rounded-2xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-900">
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label class="block text-sm font-semibold mb-2">Password</label>
        <input type="password" name="password" required
          class="w-full border-2 border-gray-800 rounded-2xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-900">
      </div>

      <!-- Confirm Password -->
      <div class="mb-6">
        <label class="block text-sm font-semibold mb-2">Confirm Password</label>
        <input type="password" name="confirmPassword" required
          class="w-full border-2 border-gray-800 rounded-2xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-900">
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-950 text-white py-4 rounded-2xl text-sm font-medium hover:bg-blue-900 transition">
        Create HOD Account
      </button>

    </form>

    <!-- Login Redirect -->
    <div class="mt-8 text-center text-gray-600">
      Already have an account?
      <a href="/hod-login"
         class="text-blue-900 font-semibold hover:underline ml-1">
        Sign In
      </a>
    </div>

  </div>

</body>
</html>
