<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CAS Dashboard</title>
  <link href="/css/output.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100 font-sans">

<nav class="bg-white shadow-sm px-10 py-4 flex justify-between items-center">

  <div class="flex items-center gap-4">

    <a href="/home" class="bg-gray-900 text-white w-10 h-10 rounded-lg flex items-center justify-center font-bold">
      CAS
    </a>

    <div>
      <p class="font-semibold text-gray-800">Course Allocation</p>
    </div>

    <div class="flex gap-6 ml-10 text-gray-600 font-medium">

      <a href="/home"
         class="<%= currentPage === 'dashboard' ? 'bg-blue-900 text-white px-4 py-2 rounded-lg' : 'hover:text-blue-900' %>">
        Dashboard
      </a>

      <a href="/upload-cv"
         class="<%= currentPage === 'upload' ? 'bg-blue-900 text-white px-4 py-2 rounded-lg' : 'hover:text-blue-900' %>">
        Upload CV
      </a>

      <a href="/allocations"
         class="<%= currentPage === 'allocations' ? 'bg-blue-900 text-white px-4 py-2 rounded-lg' : 'hover:text-blue-900' %>">
        My Allocations
      </a>

      <a href="/notifications"
         class="<%= currentPage === 'notifications' ? 'bg-blue-900 text-white px-4 py-2 rounded-lg' : 'hover:text-blue-900' %>">
        Notifications
      </a>

    </div>

  </div>

  <div onclick="openProfileModal()" 
     class="flex items-center gap-3 cursor-pointer hover:bg-gray-100 px-4 py-2 rounded-xl transition">

    <div class="w-10 h-10 bg-blue-950 text-white rounded-full flex items-center justify-center">
      ðŸ‘¤
    </div>

    <div>
      <p class="font-semibold text-gray-800"><%= user.fullName %></p>
      <p class="text-sm text-gray-500"><%= user.role %></p>
    </div>

  </div>

</nav>

<%- body %>

<!-- PROFILE MODAL -->
<div id="profileModal" 
     class="fixed inset-0 backdrop-blur-sm flex items-center justify-center hidden z-50">

  <div class="bg-white w-[480px] rounded-2xl shadow-xl p-6 relative">

    <button onclick="closeProfileModal()" 
      class="absolute top-6 right-6 text-gray-500 text-2xl hover:text-black">
      Ã—
    </button>

    <h2 class="text-2xl font-semibold mb-8">
      Profile Details
    </h2>

    <div class="flex flex-col items-center mb-8">
      <div class="w-24 h-24 bg-green-700 rounded-full flex items-center justify-center text-white text-4xl">
        ðŸ‘¤
      </div>

      <h3 class="text-xl font-semibold mt-4">
        <%= user.fullName %>
      </h3>

      <p class="text-green-700">
        <%= user.role %>
      </p>
    </div>

    <div class="space-y-6 text-gray-700">

      <div class="flex justify-between border-b pb-3">
        <span>Email</span>
        <span><%= user.email %></span>
      </div>

      <div class="flex justify-between border-b pb-3">
        <span>Department</span>
        <span><%= user.department || "Not Set" %></span>
      </div>

      <div class="flex justify-between border-b pb-3">
        <span>Phone</span>
        <span><%= user.phone || "Not Set" %></span>
      </div>

      <div class="flex justify-between border-b pb-3">
        <span>Member Since</span>
        <span><%= user.createdAt ? new Date(user.createdAt).toDateString() : "" %></span>
      </div>

    </div>

    <div class="flex flex-col gap-4 mt-10">

      <div class="flex gap-6">
        <button onclick="openEditProfile()" 
          class="w-1/2 bg-gray-200 py-4 rounded-2xl font-medium hover:bg-gray-300">
          Edit Profile
        </button>

        <button onclick="closeProfileModal()" 
          class="w-1/2 bg-green-700 text-white py-4 rounded-2xl font-medium hover:bg-green-800">
          Close
        </button>
      </div>

      <a href="/logout"
         class="w-full bg-red-600 text-white py-4 rounded-2xl text-lg font-medium text-center hover:bg-red-700 transition">
        Logout
      </a>

    </div>

  </div>
</div>

<!-- EDIT PROFILE MODAL -->
<div id="editProfileModal" 
     class="fixed inset-0 backdrop-blur-sm flex items-center justify-center hidden z-50">

  <div class="bg-white w-[520px] rounded-2xl shadow-xl p-6 relative">

    <button onclick="closeEditProfile()" 
      class="absolute top-6 right-6 text-gray-500 text-2xl hover:text-black">
      Ã—
    </button>

    <h2 class="text-2xl font-semibold mb-6">
      Edit Profile
    </h2>

    <div class="flex justify-center mb-6">
      <div class="w-28 h-28 bg-green-700 rounded-full flex items-center justify-center text-white text-4xl">
        ðŸ‘¤
      </div>
    </div>

    <form action="/update-profile" method="POST" class="space-y-6">

      <div>
        <label class="block text-lg mb-2">Full Name</label>
        <input type="text" name="fullName" 
          value="<%= user.fullName %>"
          class="w-full border-2 border-gray-300 rounded-2xl px-6 py-4 text-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
      </div>

      <div>
        <label class="block text-lg mb-2">Email</label>
        <input type="email" name="email" 
          value="<%= user.email %>"
          class="w-full border-2 border-gray-300 rounded-2xl px-6 py-4 text-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
      </div>

      <div>
        <label class="block text-lg mb-2">Department</label>
        <input type="text" name="department" 
          value="<%= user.department || '' %>"
          class="w-full border-2 border-gray-300 rounded-2xl px-6 py-4 text-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
      </div>

      <div>
        <label class="block text-lg mb-2">Phone</label>
        <input type="text" name="phone" 
          value="<%= user.phone || '' %>"
          class="w-full border-2 border-gray-300 rounded-2xl px-6 py-4 text-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
      </div>

      <div class="flex gap-6 mt-10">

        <button type="button" onclick="closeEditProfile()"
          class="w-1/2 border-2 border-blue-600 text-gray-700 py-4 rounded-2xl text-lg font-medium hover:bg-blue-50">
          Cancel
        </button>

        <button type="submit"
          class="w-1/2 bg-green-700 text-white py-4 rounded-2xl text-lg font-medium hover:bg-green-800">
          Save Changes
        </button>

      </div>

    </form>

  </div>
</div>

<script>
  const profileModal = document.getElementById("profileModal");
  const editModal = document.getElementById("editProfileModal");

  function openProfileModal() {
    profileModal.classList.remove("hidden");
  }

  function closeProfileModal() {
    profileModal.classList.add("hidden");
  }

  function openEditProfile() {
    profileModal.classList.add("hidden");
    editModal.classList.remove("hidden");
  }

  function closeEditProfile() {
    editModal.classList.add("hidden");
  }
</script>

</body>
</html>
